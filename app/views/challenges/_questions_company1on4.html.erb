<div class="collapse" id="questions-company_1on4" data-parent="#accordion">
  <%= simple_form_for @interview_preparation do |f| %>
    <div class="d-flex flex-row bd-highlight mb-3 align-items-center" >
      <div class="p-2 bd-highlight">
        <h3> #1. What are the key objectives & challenges of <%= @interview_preparation.company %>?</h3>
      </div>
      <div class="p-2 bd-highlight">
        <%= button_tag type: 'submit', class: "btn btn-flat" do %>
          Save
          <i class="far fa-check-circle" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
    <div class="form-group ">
      <div>
        <%= f.simple_fields_for :candidate_works, @questions1on4 do |cw| %>
          <%= cw.input :question, value: cw.object.question, label: false %>
          <%= cw.input :answer, as: :text, label: false %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
